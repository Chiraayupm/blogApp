<%- include('partials/header'); -%>

    <h2 class="mb-1"> Home </h2>
    <p class="pb-2">
        <%= time %>
    </p>

    <% posts.forEach(post => { %>
        <div class="my-3 py-2 blogs">
            <div class="row m-0">
                <div class="my-1 col-2">
                    <p> <%= post.email %> </p>
                </div>
                <div class="my-1 col-2">
                    <p> <%= post.date %> </p>
                </div>
            </div>
            <div>
                <h3 class="px-2">
                    <%= post.title %>
                </h3>
                <p class="px-2">
                    <%= post.text %>
                </p>
            </div>
        </div>
    <% }) %>


<%- include('partials/footer'); -%>